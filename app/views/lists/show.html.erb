
<div class="list-background" style="--list-image: url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>')">
  <div class="container">
    <h1><%= @list.name %></h1>
    <% if @list.photo.attached? %>
      <div class="card-category"

      >
      Cool article
      </div>
    <% else %>
      <%= "NO PICTURE" %>
    <% end %>
    <div>
      <% @list.bookmarks.each do |bookmark| %>
      <div class="mb-2">
        <h2><%= bookmark.movie.title %></h2>
        <p><%= bookmark.comment %></p>
        <%= link_to "Delete",
          bookmark_path(bookmark),
          class: "btn btn-primary",
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
        %>
      </div>
      <% end %>
    </div>
    <%= link_to "Back to all lists", lists_path, class: "btn btn-primary"  %>
    <%= link_to "Create a bookmark", new_list_bookmark_path(@list), class: "btn btn-primary"  %>
  </div>
</div>
